<Window xmlns="https://github.com/avaloniaui"
        xmlns:vm="using:MESBlastBlockGenerator"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        x:DataType="vm:MainWindowViewModel"
        x:Class="MESBlastBlockGenerator.MainWindow"
        Title="{Binding Title}">
  
  <Window.Styles>
    <Style Selector="TextBox.input">
      <Setter Property="Width" Value="250"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="Theme" Value="{StaticResource FilledTextBox}"/>
    </Style>
    <Style Selector="Border.texteditor">
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="BorderBrush" Value="Black"/>
      <Setter Property="Background" Value="#e5e5e5"/>
      <Setter Property="CornerRadius" Value="3"/>
    </Style>
    <Style Selector="Button.button">
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector="Grid.row">
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Height" Value="65"/>
    </Style>
    <Style Selector="TextBlock.status-text">
      <Setter Property="HorizontalAlignment" Value="Center"/>
     </Style>
    <Style Selector="AvaloniaEdit|TextEditor.xml-output">
      <Setter Property="IsReadOnly" Value="True"/>
      <Setter Property="WordWrap" Value="True"/>
      <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
      <Setter Property="SyntaxHighlighting" Value="XML"/>
     </Style> 
  </Window.Styles>

  <Grid Margin="15" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto" RowSpacing="10" x:DataType="vm:MainWindowViewModel">
    <TextBlock Text="Генератор ПМВ для MES" FontSize="18" Grid.Row="0" HorizontalAlignment="Center"/>
    <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*,*" Classes="row">
        <StackPanel Grid.Column="0">
          <TextBox x:Name="MaxRowTextBox" Classes="input" Text="{Binding MaxRow, Mode=TwoWay}" 
                   wpf:TextFieldAssist.Label="Количество рядов скважин"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
          <TextBox x:Name="BaseXTextBox" Classes="input" Text="{Binding BaseX, Mode=TwoWay}" 
                   wpf:TextFieldAssist.Label="Координата X первой скважин"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
          <TextBox x:Name="PitNameTextBox" Classes="input" Text="{Binding PitName, Mode=TwoWay}" 
                   wpf:TextFieldAssist.Label="Название карьера"/>
        </StackPanel>
        <StackPanel Grid.Column="3">
          <TextBox x:Name="RealDepthTextBox" Classes="input" Text="{Binding RealDepth, Mode=TwoWay}" 
                   wpf:TextFieldAssist.Label="Фактическая глубина скважин"/>
        </StackPanel>
        <CheckBox x:Name="DispersedChargeCheckBox" IsChecked="{Binding DispersedCharge, Mode=TwoWay}" 
                  Content="Рассредоточенный заряд" VerticalAlignment="Center" HorizontalAlignment="Center"
                  Grid.Column="4"/>
    </Grid>
    <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*,*" Classes="row">
      <StackPanel Grid.Column="0">
        <TextBox x:Name="MaxColTextBox" Classes="input" Text="{Binding MaxCol, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Количество столбцов скважин"/>
      </StackPanel>
      <StackPanel Grid.Column="1">
        <TextBox x:Name="BaseYTextBox" Classes="input" Text="{Binding BaseY, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Координата Y первой скважин"/>
      </StackPanel>
      <StackPanel Grid.Column="2">
        <TextBox x:Name="LevelTextBox" Classes="input" Text="{Binding Level, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Горизонт"/>
      </StackPanel>
      <StackPanel Grid.Column="3">
        <TextBox x:Name="DesignDepthTextBox" Classes="input" Text="{Binding DesignDepth, Mode=TwoWay}"
                 wpf:TextFieldAssist.Label="Проектная глубина скважин"/>
      </StackPanel>
      <StackPanel Grid.Column="4">
        <TextBox x:Name="MainChargeMassTextBox" Classes="input" Text="{Binding MainChargeMass}" 
                 wpf:TextFieldAssist.Label="Масса основного заряда"/>
      </StackPanel>
    </Grid>
    <Grid Grid.Row="3" ColumnDefinitions="*,*,*,*,*" Classes="row">
      <StackPanel Grid.Column="0">
        <TextBox x:Name="DistanceTextBox" Classes="input" Text="{Binding Distance, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Расстояние между скважинамин"/>
      </StackPanel>
      <StackPanel Grid.Column="1">
        <TextBox x:Name="BaseZTextBox" Classes="input" Text="{Binding BaseZ, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Координата Z скважин"/>
      </StackPanel>
      <StackPanel Grid.Column="2">
        <TextBox x:Name="BlockNumberTextBox" Classes="input" Text="{Binding BlockNumber, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Номер блока"/>
      </StackPanel>
      <StackPanel Grid.Column="3">
        <TextBox x:Name="StemmingLengthTextBox" Classes="input" Text="{Binding StemmingLength, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Длина забойки"/>
      </StackPanel>
      <StackPanel Grid.Column="4">
        <TextBox x:Name="SecondaryChargeMassTextBox" Classes="input" IsVisible="{Binding #DispersedChargeCheckBox.IsChecked}" 
                 Text="{Binding SecondaryChargeMass}" wpf:TextFieldAssist.Label="Масса второго заряда"/>
      </StackPanel>
    </Grid>
    <Grid Grid.Row="4" ColumnDefinitions="*,*,*,*,*" Classes="row">
      <StackPanel Grid.Column="0">
        <TextBox x:Name="RotationAngleTextBox" Classes="input" Grid.Column="0" Text="{Binding RotationAngle, Mode=TwoWay}" 
                 wpf:TextFieldAssist.Label="Угол поворота сетки"/>
      </StackPanel>
    </Grid>
    <Border Grid.Row="5" Classes="texteditor">
      <AvaloniaEdit:TextEditor x:Name="XmlOutput" Classes="xml-output" Document="{Binding GeneratedXml}"/>
    </Border>
    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
      <Button x:Name="CopyButton" Content="Копировать в буфер обмена" Classes="button" Command="{Binding CopyToClipboardCommand}" IsEnabled="{Binding CopyButtonEnabled}"/>
      <Button x:Name="GenerateButton" Content="Сгенерировать XML" Classes="button" Command="{Binding GenerateXmlCommand}"/>
    </StackPanel>
    <controls:SnackbarHost Grid.Row="0" Grid.RowSpan="7" x:Name="StatusSnackbar" HostName="{Binding $self.Name}" Foreground="{Binding StatusColor}"/>
  </Grid>
</Window>
