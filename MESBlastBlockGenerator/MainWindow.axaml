<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600" Background="LightGray"
        x:Class="MESBlastBlockGenerator.MainWindow">
  
  <Window.Styles>
    <Style Selector="TextBlock.input-label">
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Width" Value="250"/>
     </Style>
    <Style Selector="TextBox.input">
      <Setter Property="Width" Value="200"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="Border.texteditor">
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="BorderBrush" Value="Black"/>
      <Setter Property="Background" Value="#e5e5e5"/>
      <Setter Property="CornerRadius" Value="3"/>
    </Style>
    <Style Selector="Button.button">
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector="StackPanel.input-row">
      <Setter Property="Orientation" Value="Horizontal"/>
      <Setter Property="Spacing" Value="10"/>
    </Style>
    <Style Selector="TextBox.invalid">
      <Setter Property="Background" Value="#FFFFE0E0"/>
      <Setter Property="BorderBrush" Value="Red"/>
    </Style>
    <Style Selector="TextBlock.status-text">
      <Setter Property="HorizontalAlignment" Value="Center"/>
     </Style>
    <Style Selector="AvaloniaEdit|TextEditor.xml-output">
      <Setter Property="IsReadOnly" Value="True"/>
      <Setter Property="WordWrap" Value="True"/>
      <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
      <Setter Property="SyntaxHighlighting" Value="XML"/>
     </Style> 
  </Window.Styles>
    
  <Grid Margin="15" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto" RowSpacing="5">
    <TextBlock Text="Генератор ПМВ для MES" FontSize="18" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20"/>

    <StackPanel Grid.Row="1" Classes="input-row">
      <TextBlock Text="Количество рядов скважин:" Classes="input-label"/>
      <TextBox x:Name="MaxRowTextBox" Text="100" Classes="input"/>
    </StackPanel>

    <StackPanel Grid.Row="2" Classes="input-row">
      <TextBlock Text="Количество столбцов скважин:" Classes="input-label"/>
      <TextBox x:Name="MaxColTextBox" Text="10" Classes="input"/>
    </StackPanel>
    
    <StackPanel Grid.Row="3" Classes="input-row">
      <TextBlock Text="Угол поворота сетки" Classes="input-label"/>
      <TextBox x:Name="RotationAngleTextBox" Text="0" Classes="input"/>
    </StackPanel>

    <StackPanel Grid.Row="4" Classes="input-row">
      <TextBlock Text="Координата X первой скважины:" Classes="input-label"/>
      <TextBox x:Name="BaseXTextBox" Text="72690" Classes="input"/>
    </StackPanel>

    <StackPanel Grid.Row="5" Classes="input-row">
      <TextBlock Text="Координата Y первой скважины:" Classes="input-label"/>
      <TextBox x:Name="BaseYTextBox" Text="98890" Classes="input"/>
    </StackPanel>

    <StackPanel Grid.Row="6" Classes="input-row">
      <TextBlock Text="Расстояние между скважинами:" Classes="input-label"/>
      <TextBox x:Name="DistanceTextBox" Text="5" Classes="input"/>
    </StackPanel>

    <StackPanel Grid.Row="7" Classes="input-row">
      <TextBlock Text="Название карьера:" Classes="input-label"/>
      <TextBox x:Name="PitNameTextBox" Text="Верхне Нижний" Classes="input"/>
    </StackPanel>

    <StackPanel Grid.Row="8" Classes="input-row">
      <TextBlock Text="Уровень:" Classes="input-label"/>
      <TextBox x:Name="LevelTextBox" Text="972" Classes="input"/>
    </StackPanel>

    <StackPanel Grid.Row="9" Classes="input-row">
      <TextBlock Text="Номер блока:" Classes="input-label"/>
      <TextBox x:Name="BlockNumberTextBox" Text="102" Classes="input"/>
    </StackPanel>
    
    <StackPanel Grid.Row="10" Classes="input-row">
      <TextBlock Text="Рассредоточенный заряд:" Classes="input-label"/>
      <CheckBox x:Name="DispersedChargeCheckBox" Margin="90,0" />
    </StackPanel>

    <Button x:Name="GenerateButton" Grid.Row="11" Content="Сгенерировать XML" Click="OnGenerateClick" Classes="button"/>

    <TextBlock x:Name="StatusText" Grid.Row="12" Classes="status-text"/>

    <Border Grid.Row="13" Classes="texteditor">
      <AvaloniaEdit:TextEditor x:Name="XmlOutput" Classes="xml-output"/>
    </Border>
    
    <Button x:Name="CopyButton" Grid.Row="14" Content="Копировать в буфер обмена" Click="OnCopyClick" Classes="button"/>
  </Grid>
</Window>
